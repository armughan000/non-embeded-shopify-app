generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}


model ProductFields {
  id             Int       @id @default(autoincrement())
  feedName       String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}


model Product {
  id                String   @id @default(uuid())
  shopifyId         String   @unique
  title             String
  bodyHtml          String?
  createdAt         DateTime
  handle            String
  productType       String
  publishedAt       DateTime
  publishedScope    String
  status            String
  tags              String
  templateSuffix    String?
  updatedAt         DateTime
  vendor            String
  adminGraphqlApiId String
  imageUrl          String?
}